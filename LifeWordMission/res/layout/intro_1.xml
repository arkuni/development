<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <include
        layout="@layout/topmenu"
        android:id="@+id/topmenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <include
        layout="@layout/intro_top_common"
        android:id="@+id/tab_btn"
        android:layout_below="@+id/topmenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
	<ImageView
	    android:id="@+id/find_church_title"
   	    android:layout_below="@+id/tab_btn"
   	    android:layout_alignParentLeft="true"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:contentDescription="@null"
   	    android:background="@drawable/copy_p1">
    </ImageView>
	<ImageView
	    android:id="@+id/btn_intro_video"
   	    android:layout_below="@+id/tab_btn"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:contentDescription="@null"
   	    android:layout_centerHorizontal="true"
   	    android:layout_marginTop="20dp"
   	    android:background="@drawable/btn_intro_video">
    </ImageView>
</RelativeLayout>
